{
  "name": "MAL omnibox",
  "description": "MyAnimeList omnibox search predictions",
  "version": "1.0",
  "omnibox": {
    "keyword": "mal"
  },
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "128": "icon/128.png",
    "256": "icon/256.png"
  },
  "background": {
    "service_worker": "bg.js",
    "type": "module"
  },
  "permissions": [
    "alarms",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "https://myanimelist.net/search/*",
    "https://myanimelist.cdn-dena.com/images/*"
  ],
  "manifest_version": 3,
  "minimum_chrome_version": "102"
}
